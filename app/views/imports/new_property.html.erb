<h1>Add New Property</h1>

<div>
    <%= form_with url: create_property_import_path(@import, property_name: @property.name), method: :post do |f| %>
        <div>
            <%= f.label :name, "Property Name: " %>
            <%= f.text_field :name %>
        </div>

        <div>
            <%= f.label :street_address, "Street Address: " %>
            <%= f.text_field :street_address %>
        </div>

        <div>
            <%= f.label :city, "City: " %>
            <%= f.text_field :city %>
        </div>

        <div>
            <%= f.label :state, "State: " %>
            <%= f.text_field :state %>
        </div>

        <div>
            <%= f.label :zip_code, "Zip Code: " %>
            <%= f.text_field :zip_code, data: { numeric: true} %>
        </div>

        <div>
            <%= f.label :units_string, "Units (comma-separated)" %>
            <%= f.text_field :units_string %>
        </div>

        <%= f.submit "Add Property" %>
    <% end %>
<%= link_to 'Back', import_path(@import) %>